{%- if theme.language_switcher and languages.length > 1 %}
  <div class="languages">
    <label class="lang-select-label">
      <i class="fa fa-language"></i>
      <span>{{ language_name(page.lang) }}</span>
      <i class="fa fa-angle-up" aria-hidden="true"></i>
    </label>
    <select class="lang-select" data-canonical="" aria-label="{{ __('accessibility.select_lang') }}">
      {% for language in languages %}
        {% if language === 'zh-CN' %}
          <option value="{{ language }}" data-href="/{{ language }}/" {% if page.lang === language %}selected{% endif %}>
            {{ language_name(language) }}
          </option>
        {% else %}
          <option value="{{ language }}" data-href="{{ i18n_path(language) }}" {% if page.lang === language %}selected{% endif %}>
            {{ language_name(language) }}
          </option>
        {% endif %}
      {% endfor %}
    </select>
  </div>
{%- endif %}